<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0088FF"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.haykabelyan.zizibizi.Replacer">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/_2sdp"
        android:text="   Գրեք կամ տեղադրեք Ձեր տեքստը."
        android:textSize="@dimen/_12sdp" />

    <EditText
        android:id="@+id/textArea1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_margin="@dimen/_2sdp"
        android:background="#DDDDDD"
        android:fadeScrollbars="false"
        android:gravity="top|left"
        android:inputType="textMultiLine"
        android:lines="5"
        android:overScrollMode="always"
        android:scrollHorizontally="false"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:textSize="@dimen/_10sdp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textArea1"
        android:layout_margin="@dimen/_2sdp"
        android:background="#DDDDDD"
        android:ems="12"
        android:hint="Ինչը փոխարինել..."
        android:textSize="@dimen/_10sdp" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editText2"
        android:layout_margin="@dimen/_2sdp"
        android:background="#DDDDDD"
        android:ems="12"
        android:hint="Ինչով..."
        android:textSize="@dimen/_10sdp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/_28sdp"
        android:layout_height="@dimen/_28sdp"
        android:layout_below="@id/textArea1"
        android:layout_marginLeft="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_toRightOf="@id/editText2"
        android:background="#DDDDDD"
        android:src="@drawable/replace" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView"
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:text="   Ձեր փոփոխված տեքստը."
        android:textSize="@dimen/_12sdp" />

    <EditText
        android:id="@+id/textArea2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_margin="@dimen/_2sdp"
        android:background="#DDDDDD"
        android:fadeScrollbars="false"
        android:gravity="top|left"
        android:inputType="none"
        android:lines="5"
        android:overScrollMode="always"
        android:scrollHorizontally="false"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:textIsSelectable="true"
        android:textSize="@dimen/_10sdp" />
</RelativeLayout>